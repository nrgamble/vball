<%= form_for @pool do |f| %>
  <div data-role="fieldcontain">
    <%= f.label :tournament_id %>
    <%= f.hidden_field(:tournament_id, :value => @tournament.id) %>
    <%= @tournament.name %>
  </div>

  <div data-role="fieldcontain"><%= f.label :name %> <%= f.text_field :name %></div>
  
  <%= f.submit :Save, 'data-theme' => 'b' %>
  <% if @pool.new? %>
    <%= link_to 'Cancel', @tournament, 'data-role' => 'button' %>
  <% else %>
    <%= link_to 'Cancel', @pool, 'data-role' => 'button' %>
    <%= link_to 'Delete', @pool, :confirm => 'Are you sure?', :method => :delete, 'data-role' => 'button', 'data-theme' => 'e' %>
  <% end %>
<% end %>