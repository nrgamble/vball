<p>When: <%= l @tournament.date, :format => :nice %></p>

<p>Where: <%= @tournament.location %></p>

<p><%= link_to 'View Bracket', @tournament.bracket, 'target' => '_blank',
               'data-role' => 'button', 'data-theme' => 'b', 'data-icon' => 'arrow-r', 'data-inline' => 'true', 'data-iconpos'=> 'right',
               'data-mini' => 'true' %></p>

<div data-role="navbar">
  <ul>
    <li><a id="a_pools" class="ui-btn-active ui-btn-up-c">Pools</a></li>
    <li><a id="a_standings">Standings</a></li>
  </ul>
</div>

<div id="panes">

  <div class="pane">
    <div id="pools">
      <ul data-role="listview" data-inset="true">
        <% @tournament.pools.each do |pool| %>
          <li><%= link_to pool.name, pool %></li>
        <% end %>
        <li data-theme="b"><%= link_to 'New Pool', new_pool_url(:tournament_id => @tournament.id) %></li>
      </ul>
    </div>
  </div>

  <div class="pane none">
    <%= render :partial => 'teams/standings', :locals => { :teams => @tournament.standings } %>
  </div>

</div>

<%= link_to 'Edit Tournament', edit_tournament_url(@tournament), 'data-role' => 'button', 'data-theme' => 'e' %>