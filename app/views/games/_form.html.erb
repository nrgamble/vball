<%= form_for @game do |f| %>
  <p>
    <%= f.label :tournament_id %>:
    <% if @game.new? %>
      <% if params[:tournament_id] %>
        <%= Tournament.find(params[:tournament_id]).name %> <%= f.hidden_field :tournament_id, { :value => params[:tournament_id] } %>
      <% else %>
        <%= f.collection_select(:tournament_id, Tournament.all, :id, :name, { :prompt => '- Select Tournament -', :selected => params[:tournament_id] }) %>
      <% end %>
    <% else %>
      <%= @game.tournament.name %> <%= f.hidden_field :tournament_id %>
    <% end %>
  </p>
  <p>
    <%= f.label :pool_id %>:
    <% if @game.new? %>
      <% if params[:pool_id] %>
        <%= Pool.find(params[:pool_id]).name %> <%= f.hidden_field :pool_id, { :value => params[:pool_id] } %>
      <% else %>
        <%= f.collection_select(:pool_id, Pool.all, :id, :name, { :prompt => '- Select Pool -', :selected => params[:pool_id] }) %>
      <% end %>
    <% else %>
      <%= @game.pool.name %> <%= f.hidden_field :pool_id %>
    <% end %>
  </p>
  <p>
    <%= f.collection_select(:away_id, Team.all, :id, :name, { :prompt => '- Select Away -', :selected => params[:away_id] }) %>
    <%= f.text_field :score_away %>
    vs
    <%= f.collection_select(:home_id, Team.all, :id, :name, { :prompt => '- Select Home -', :selected => params[:home_id] }) %>
    <%= f.text_field :score_home %>
  </p>   
  <p><%= f.submit :Save %></p>
<% end %>